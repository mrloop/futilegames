{{#if (valid-move move=pos angle=angle)}}
  {{#if points}}
    <polygon {{action "move" pos}}
      class="board-position"
      points={{points}}
      fill="transparent"
      stroke="none" />
  {{/if}}
  {{#if path}}
    <path {{action "move" pos}}
      class="board-position"
      d={{path}}
      fill="transparent"
      stroke="none" />
  {{/if}}
  {{#if circle}}
    <circle {{action "move" pos}}
      class="board-position"
      cx={{cx}}
      cy={{cy}}
      r={{r}}
      fill="transparent"
      stroke="none" />
  {{/if}}
{{/if}}
